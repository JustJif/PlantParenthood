<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRCodeGenerator">

    <Button
        android:id="@+id/qrcode_generate_button"
        android:layout_width="302dp"
        android:layout_height="56dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="589dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="86dp"
        android:text="Generate QR Code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/qrcode_image"
        android:contentDescription="QRCode image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="338dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/debug_plantIDEntry"
        android:layout_width="263dp"
        android:layout_height="82dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="482dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="204dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/debug_plantIDprompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="436dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="276dp"
        android:text="Enter Plant ID:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>